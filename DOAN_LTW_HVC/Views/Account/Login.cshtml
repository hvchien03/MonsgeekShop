@model DOAN_LTW_HVC.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container">
    <div class="row justify-content-around">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="col-md-6 py-3 my-3 mx-auto">
                <h3 class="text-center py-3">Login</h3>
                <div class="col-12 py-3">
                    @Html.TextBoxFor(row => row.Username, new { placeholder = "UserName", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.Username)
                </div>
                <div class="col-12 py-3">
                    @Html.PasswordFor(row => row.Password, new { placeholder = "Your Password", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.Password)
                </div>
                <div class="form-check py-3">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Remember me
                    </label>
                </div>
                <div class="col-12 py-3">
                    @Html.ValidationSummary()
                </div>
                <div class="col-12 py-3">
                    <button class="btn d-block btn-dark form-control" type="submit" style="border-radius: 0;" />Login
                </div>
                <a href="/account/register" class="text-decoration-none text-black">Create Account</a>
            </div>
        }
    </div>
</div>