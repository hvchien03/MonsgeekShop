@model DOAN_LTW_HVC.ViewModel.RegisterVM

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container">
    <div class="row justify-content-around">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="col-md-6 py-3 my-3 mx-auto">
                <h3 class="text-center py-3">Create Account</h3>
                <div class="col-12 py-3">
                    @Html.TextBoxFor(row => row.Username, new { placeholder = "UserName", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.Username)
                </div>
                <div class="col-12 py-3">
                    @Html.PasswordFor(row => row.Password, new { placeholder = "Your Password", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.Password)
                </div>
                <div class="col-12 py-3">
                    @Html.PasswordFor(row => row.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.ConfirmPassword)
                </div>
                <div class="col-12 py-3">
                    @Html.TextBoxFor(row => row.Email, new { placeholder = "Email", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.Email)
                </div>
                <div class="col-12 py-3">
                    @Html.TextBoxFor(row => row.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.PhoneNumber)
                </div>
                <div class="col-12 py-3">
                    @Html.TextBoxFor(row => row.Address, new { placeholder = "Address", @class = "form-control rounded-0" })
                    @Html.ValidationMessageFor(row => row.Address)
                </div>
                <div class="col-12 py-3">
                    <button class="btn d-block btn-dark form-control" type="submit" style="border-radius: 0;" />Register
                </div>
                <a href="/account/login" class="text-decoration-none text-black">Already have an account?</a>
            </div>           
        }
    </div>
</div>